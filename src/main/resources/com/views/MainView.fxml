<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Controllers.MainController">
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Pizza Ordering System">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></Label>
    <Button onAction="#openOrderView" text="Order Pizza">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></Button>
    <Button onAction="#openFeedbackView" text="Feedback">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></Button>
   <Button mnemonicParsing="false" onAction="#showPromotions" text="Promotions">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></Button>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>
